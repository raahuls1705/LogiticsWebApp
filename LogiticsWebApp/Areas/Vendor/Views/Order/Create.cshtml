@using LogiticsWebApp.Utilities.Enums
@model LogiticsWebApp.Areas.Vendor.Models.OrderModel
@{
    ViewData["Title"] = "List";
    var statuslist = EnumHelpers.BindDropDownFromEnum<OrderStatus>();
    var paymentDetaillist = EnumHelpers.BindDropDownFromEnum<PaymentDetails>();
    var shippingDetaillist = EnumHelpers.BindDropDownFromEnum<ShippingDetails>();
}

<div class="container">
    <br />
    <div class="row">
        <div class="col-md-12 ">

            <div class="card card-dark">
                <div class="card-header">
                    <h3 class="card-title">Create Order</h3>
                </div>
                <div class="card-body">

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-sm-6">


                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control" type="email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="StatusId" class="control-label"></label>
                                    <select asp-for="StatusId" class="form-control">
                                        <option value="">Please select status</option>
                                        @foreach (var o in statuslist)
                                        {
                                            <option value="@o.Value">@o.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="OrderNumber" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="ShippingDetailId" class="control-label"></label>
                                    <select asp-for="ShippingDetailId" class="form-control">
                                        <option value="">Please select shipping detail</option>
                                        @foreach (var o in shippingDetaillist)
                                        {
                                            <option value="@o.Value">@o.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="ShippingDetailId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Dimension" class="control-label"></label>
                                    <input asp-for="Dimension" class="form-control" type="text" />
                                    <span asp-validation-for="Dimension" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Location" class="control-label"></label>
                                    <input asp-for="Location" class="form-control" />
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Phone" class="control-label"></label>
                                    <input asp-for="Phone" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PaymentDetailId" class="control-label"></label>
                                    <select asp-for="PaymentDetailId" class="form-control">
                                        <option value="">Please select payment detail</option>
                                        @foreach (var o in paymentDetaillist)
                                        {
                                            <option value="@o.Value">@o.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="PaymentDetailId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Weight" class="control-label"></label>
                                    <input asp-for="Weight" class="form-control" type="text" />
                                    <span asp-validation-for="Weight" class="text-danger"></span>
                                </div>  
                            </div>
                        </div>


                        <div class="form-group text-right">
                            <a asp-action="Index" value="Cancel" class="btn btn-danger">Cancel</a>
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>



        </div>
    </div>



</div>