@{
    Layout = null;
}

@model RegisterModel
@inject ICompanySizeRepository _companySizeRepository
@inject IIndustryTypeRepository _industryTypeRepository
@inject ICountryRepository _countryRepository
<div class="row">
    <div class="col-6">
        <div class="input-group mb-3">
            <input asp-for="Input.CompanyName" type="text" class="form-control" placeholder="Company Name">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-industry"></span>
                </div>
            </div>
        </div>
        <div class="input-group mb-3">
            <input asp-for="Input.City" type="text" class="form-control" placeholder="City">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-city"></span>
                </div>
            </div>
        </div>
        <div class="input-group mb-3">
            <select id="dates-field2" class="input-group form-control" asp-for="Input.Country">
                <option value="0">Select Country</option>
                @foreach (var c in _countryRepository.GetCountryDropDownList())
                {
                    <option value="0">Select Country</option>
                    <option value="@c.Value">@c.Text</option>
                }
            </select>
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-location-arrow"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="input-group mb-3">
            <input asp-for="Input.Address" type="text" class="form-control" placeholder="Address">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-address-card"></span>
                </div>
            </div>
        </div>
        <div class="input-group mb-3">
            <input asp-for="Input.PostalCode" type="text" class="form-control" placeholder="Zip/Postal Code">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-code"></span>
                </div>
            </div>
        </div>
        <div class="input-group mb-3">
            <input asp-for="Input.Phone" type="tel" class="form-control" placeholder="Phone Number">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-phone"></span>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-6">
        <div class="input-group mb-3">
            <input asp-for="Input.FirstName" type="text" class="form-control" placeholder="First Name">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-user"></span>
                </div>
            </div>
        </div>
        <div class="input-group mb-3">
            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                </div>
            </div>
        </div>

        <div class="input-group mb-3">
            <select id="dates-field2" class="input-group form-control" asp-for="Input.IndustryTypeId">
                <option value="0">Select Industrial Type</option>
                @foreach (var c in _industryTypeRepository.GetIndustryTypeDropDownList())
                {
                    <option value="@c.Value">@c.Text</option>
                }
            </select>
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-couch"></span>
                </div>
            </div>
        </div>

    </div>
    <div class="col-6">
        <div class="input-group mb-3">
            <input asp-for="Input.LastName" type="text" class="form-control" placeholder="Last Name">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-user"></span>
                </div>
            </div>
        </div>

        <div class="input-group mb-3">
            <input asp-for="Input.JobTitle" type="text" class="form-control" placeholder="Job Title">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-tint"></span>
                </div>
            </div>
        </div>
        <div class="input-group mb-3">
            <select id="dates-field2" class="input-group form-control" asp-for="Input.CompanySizeId">
                <option value="0">Select Company Size</option>
                @foreach (var c in _companySizeRepository.GetCompanySizeDropDownList())
                {
                    <option value="@c.Value">@c.Text</option>
                }
            </select>
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-couch"></span>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-6">
        <div class="input-group mb-3">
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="input-group mb-3">
            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Retype password">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <div class="input-group mb-3">
            <textarea asp-for="Input.CurrentProcessDescription" type="text" rows="2" class="form-control" placeholder="Some information about your current process"></textarea>
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-text-height"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="input-group mb-3">
            <textarea asp-for="Input.CurrentProcessChallenges" type="text" rows="2" class="form-control" placeholder="Challenges in your current process"></textarea>
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-text-height"></span>
                </div>
            </div>
        </div>
    </div>
</div>
